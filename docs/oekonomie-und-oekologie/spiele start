    <script>
        // Vereinfachte Szenarien - k√ºrzer und klarer
        const scenarios = [
            {
                title: 'Neues Industriegebiet',
                description: 'Eine Firma m√∂chte ein gro√ües Werk bauen. Es w√ºrde 500 Arbeitspl√§tze schaffen, aber ein Waldgebiet m√ºsste gerodet werden.',
                options: [
                    { 
                        text: 'Sofort genehmigen', 
                        detail: 'Schneller Wirtschaftsaufschwung, Wald wird zerst√∂rt',
