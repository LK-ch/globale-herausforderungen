                        oekonomie: 5, 
                        oekologie: -12
                    }
                ]
            }
        ];

        // Spiel-Status
        let gameState = {
            currentScenario: 0,
            scores: { oekonomie: 50, oekologie: 50 },
            decisions: []
        };

        // Spiel starten
        function startGame() {
            document.getElementById('start-screen').classList.add('hidden');
            showScenario();
        }

        // Szenario anzeigen
        function showScenario() {
            const scenario = scenarios[gameState.currentScenario];
            const gameScreen = document.getElementById('game-screen');
            
            let optionsHtml = '';
            scenario.options.forEach((option, index) => {
                optionsHtml += `
                    <button class="option-btn" onclick="makeDecision(${index})">
                        <strong>${option.text}</strong>
                        <small>${option.detail}</small>
                    </button>
                `;
            });

            gameScreen.innerHTML = `
                <div class="scenario-header">
                    <span style="font-size: 1.2rem; font-weight: bold; color: #1f2937;">
                        Szenario ${gameState.currentScenario + 1} / ${scenarios.length}
                    </span>
                </div>

                <div class="score-bars">
                    <div class="score-item">
                        <h4><span>üìà</span> √ñkonomie</h4>
                        <div class="progress-bar">
                            <div class="progress-fill blue" style="width: ${gameState.scores.oekonomie}%">
                                ${gameState.scores.oekonomie}%
                            </div>
                        </div>
                    </div>
                    <div class="score-item">
                        <h4><span>üåø</span> √ñkologie</h4>
                        <div class="progress-bar">
                            <div class="progress-fill green" style="width: ${gameState.scores.oekologie}%">
                                ${gameState.scores.oekologie}%
                            </div>
                        </div>
                    </div>
                </div>

                <div class="scenario-content">
                    <h2>${scenario.title}</h2>
                    <p>${scenario.description}</p>
                    <h3 style="margin-bottom: 1rem; font-weight: 600;">Was entscheidest du?</h3>
                    <div class="options">
                        ${optionsHtml}
                    </div>
                </div>
            `;
            
            gameScreen.classList.remove('hidden');
        }

        // Entscheidung treffen
        function makeDecision(optionIndex) {
            const scenario = scenarios[gameState.currentScenario];
            const option = scenario.options[optionIndex];
            
            // Scores aktualisieren
            gameState.scores.oekonomie = Math.max(0, Math.min(100, gameState.scores.oekonomie + option.oekonomie));
            gameState.scores.oekologie = Math.max(0, Math.min(100, gameState.scores.oekologie + option.oekologie));
            
            // Entscheidung speichern
            gameState.decisions.push({
                scenario: scenario.title,
                choice: option.text,
                detail: option.detail
            });
            
            // N√§chstes Szenario oder Ergebnis
            if (gameState.currentScenario < scenarios.length - 1) {
                gameState.currentScenario++;
                showScenario();
            } else {
                showResults();
            }
        }

        // Ergebnisse anzeigen
        function showResults() {
            const diff = Math.abs(gameState.scores.oekonomie - gameState.scores.oekologie);
            let assessment;
            
            if (diff < 15) {
                assessment = { 
                    text: '‚öñÔ∏è Ausgewogen', 
                    color: '#10b981', 
                    description: 'Du hast wirtschaftliche und √∂kologische Interessen gut balanciert!' 
                };
            } else if (gameState.scores.oekonomie > gameState.scores.oekologie + 15) {
                assessment = { 
                    text: 'üìà Wirtschafts-orientiert', 
                    color: '#3b82f6', 
                    description: 'Du hast vor allem auf Wirtschaft und Arbeitspl√§tze geachtet.' 
                };
            } else {
                assessment = { 
                    text: 'üåø Umwelt-orientiert', 
                    color: '#10b981', 
                    description: 'Du hast den Umweltschutz in den Vordergrund gestellt.' 
                };
            }

            let decisionsHtml = '';
            gameState.decisions.forEach(decision => {
                decisionsHtml += `
                    <div class="decision-item">
                        <p style="font-weight: bold; margin-bottom: 0.25rem;">${decision.scenario}</p>
                        <p style="margin-bottom: 0.25rem;">‚ûú ${decision.choice}</p>
                        <p style="font-size: 0.85rem; color: #6b7280; font-style: italic;">${decision.detail}</p>
                    </div>
                `;
            });

            document.getElementById('game-screen').classList.add('hidden');
            const resultScreen = document.getElementById('result-screen');
            resultScreen.innerHTML = `
                <div style="text-align: center; margin-bottom: 2rem;">
                    <h1 style="font-size: 2rem; font-weight: bold; color: #1f2937;">
                        Spielende - Deine Bilanz
                    </h1>
                </div>

                <div class="results-grid">
                    <div class="result-card">
                        <h3><span>üìà</span> √ñkonomie</h3>
                        <div class="progress-bar result-bar">
                            <div class="progress-fill blue" style="width: ${gameState.scores.oekonomie}%">
                                ${gameState.scores.oekonomie}%
                            </div>
                        </div>
                    </div>
                    <div class="result-card">
                        <h3><span>üåø</span> √ñkologie</h3>
                        <div class="progress-bar result-bar">
                            <div class="progress-fill green" style="width: ${gameState.scores.oekologie}%">
                                ${gameState.scores.oekologie}%
                            </div>
                        </div>
                    </div>
                </div>

                <div class="assessment">
                    <h3 style="color: ${assessment.color}">${assessment.text}</h3>
                    <p style="font-size: 1.1rem;">${assessment.description}</p>
                </div>

                <div class="decisions-list">
                    <h3 style="margin-bottom: 1rem;">Deine Entscheidungen:</h3>
                    ${decisionsHtml}
                </div>

                <div class="learning-box">
                    <h3><span>üß†</span> Was hast du gelernt?</h3>
                    <ul>
                        <li><strong>√ñkonomie</strong> denkt in Geld, Gewinn und kurzfristigen Vorteilen</li>
                        <li><strong>√ñkologie</strong> denkt in Umwelt, Nachhaltigkeit und langfristigen Folgen</li>
                        <li>Beide Perspektiven sind wichtig und haben gute Gr√ºnde</li>
                        <li>Die Herausforderung ist, <strong>beides zu vereinen</strong></li>
                        <li>Nachhaltige L√∂sungen sind oft teurer am Anfang, sparen aber sp√§ter Kosten</li>
                    </ul>
                </div>

                <button class="btn-primary" onclick="resetGame()">
                    <span>üîÑ</span>
                    Nochmal spielen
                </button>
            `;
            resultScreen.classList.remove('hidden');
        }

        // Spiel zur√ºcksetzen
        function resetGame() {
            gameState = {
                currentScenario: 0,
                scores: { oekonomie: 50, oekologie: 50 },
                decisions: []
            };
            document.getElementById('result-screen').classList.add('hidden');
            document.getElementById('start-screen').classList.remove('hidden');
        }

        // Toggle Expandable Functions
        function toggleExpand1() {
            const content = document.getElementById('expandable-content1');
            const headers = document.querySelectorAll('.expandable-header');
            const header = headers[0];
            content.classList.toggle('open');
            header.classList.toggle('open');
        }

        function toggleExpand2() {
            const content = document.getElementById('expandable-content2');
            const headers = document.querySelectorAll('.expandable-header');
            const header = headers[1];
            content.classList.toggle('open');
            header.classList.toggle('open');
        }
    </script>
</body>
</html>

